{
  "manifest_version": 3,
  "name": "UI DEV Kit",
  "version": "1.0.0",
  "description": "Bundle of UI Design Tools",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "UI DEV Kit"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/browser-polyfill.min.js",
        "content/ruler_content.js",
        "content/eyedrop_content.js"
      ],
      "css": ["content/ruler_content.css", "content/eyedrop_content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/ruler_content.css", "content/eyedrop_content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
